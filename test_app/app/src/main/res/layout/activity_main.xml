<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test_app.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/user_name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name_box"
        android:layout_above="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/submit"
        android:layout_alignBottom="@+id/name_box"
        android:layout_toRightOf="@+id/name_box" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/how_much"
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/name_box"
        android:layout_alignStart="@+id/name_box"
        android:layout_marginTop="46dp"
        android:indeterminate="false" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/setter"
        android:layout_below="@+id/how_much"
        android:layout_alignLeft="@+id/how_much"
        android:layout_alignStart="@+id/how_much"
        android:indeterminate="false" />

</RelativeLayout>
